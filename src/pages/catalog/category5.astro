---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import Product from "../../components/template/Product.astro";
import linea from "../../../public/img/linea.svg";
import producto1 from "../../../public/img/productos/category5/producto1.jpg";
import producto2 from "../../../public/img/productos/category5/producto2.jpg";
---

<BaseLayout>
    <section class="pt-10 dark:text-white">
        <h1 class="text-3xl font-medium text-center mt-16">Capacitación de empresas</h1>
        <Image class="mb-4 mx-auto" src={linea} alt="linea" />
        <div
            class="mx-auto grid max-w-6xl grid-cols-1 gap-6 p-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
        >
        <Product title="Cursos" img={producto1} alt="Producto1" text="Amplíe sus conocimientos y habilidades en el sector agropecuario con nuestros cursos especializados. Diseñados y liderados por expertos en la industria" msjWhatsApp="https://wa.me/524462136447?text=Necesito%20informaci%C3%B3n%20sobre%20su%20servicio%20en%20Cursos"/>
        <Product title="Talleres" img={producto2} alt="Producto2" text="Aprenda de manera práctica y colaborativa con nuestros talleres dinámicos y participativos, nuestros talleres ofrecen una oportunidad única para adquirir nuevas habilidades y técnicas bajo la guía de expertos en el campo" msjWhatsApp="https://wa.me/524462136447?text=Necesito%20informaci%C3%B3n%20sobre%20su%20servicio%20en%20Talleres"/>
        </div>
    </section>
</BaseLayout>