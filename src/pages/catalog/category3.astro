---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import Product from "../../components/template/Product.astro";
import linea from "../../../public/img/linea.svg";
import producto1 from "../../../public/img/productos/category3/producto1.jpg";
import producto2 from "../../../public/img/productos/category3/producto2.jpg";
import producto3 from "../../../public/img/productos/category3/producto3.jpg";
---

<BaseLayout>
    <section class="pt-10 dark:text-white">
        <h1 class="text-3xl font-medium text-center mt-16">Geomembranas</h1>
        <Image class="mb-4 mx-auto" src={linea} alt="linea" />
        <div
            class="mx-auto grid max-w-6xl grid-cols-1 gap-6 p-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
        >
        <Product title="Ollas" img={producto1} alt="Producto1" text="Optimice el riego y aumente la eficiencia hídrica en sus cultivos con nuestras ollas agrícolas, estas ollas son la solución ideal para maximizar el rendimiento y la calidad de sus cosechas." msjWhatsApp="https://wa.me/524462136447?text=Necesito%20informaci%C3%B3n%20sobre%20su%20servicio%20en%20ollas"/>
        <Product title="Recubrimiento de lagunas" img={producto2} alt="Producto2" text="Proteja sus lagunas y estanques de agua con nuestro recubrimiento especializado. Diseñado para resistir la erosión, evitar fugas y mantener la calidad del agua" msjWhatsApp="https://wa.me/524462136447?text=Necesito%20informaci%C3%B3n%20sobre%20su%20servicio%20en%20recubrimiento%20de%20lagunas"/>
        <Product title="Estanques cilíndricos para almacenamiento de agua" img={producto3} alt="Producto3" text="Almacene de manera segura y eficiente grandes volúmenes de agua con nuestros estanques cilíndricos. Fabricados con materiales resistentes y duraderos" msjWhatsApp="https://wa.me/524462136447?text=Necesito%20informaci%C3%B3n%20sobre%20su%20servicio%20en%20Estanques%20cil%C3%ADndricos%20para%20almacenamiento%20de%20agua"/>
        </div>
    </section>
</BaseLayout>